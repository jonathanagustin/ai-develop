{
    "image": "mcr.microsoft.com/devcontainers/python:0-3.8",
    "name": "ai-develop",
    "onCreateCommand": "/bin/bash -c '.devcontainer/oncreate.sh'",
    "waitFor": "onCreateCommand",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-python.isort",
                "ms-python.autopep8",
                "DavidAnson.vscode-markdownlint",
                "mechatroner.rainbow-csv",
                "janisdd.vscode-edit-csv",
                "analytic-signal.preview-pdf",
                "mutantdino.resourcemonitor",
                "EditorConfig.EditorConfig"
            ],
            "settings": {
                "editor.tabSize": 4,
                "editor.insertSpaces": true,
                "editor.detectIndentation": false,
                "[python]": {
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": true
                    },
                    "editor.formatOnSave": true,
                    "python.defaultInterpreterPath": "/home/vscode/miniconda/envs/default/bin/python",
                    "python.autoselectInterpreter": true,
                    "python.formatting.provider": "autopep8"
                }
            }
        }
    }
}
